@model Product

<div class="text-center">
<h2>Register a product</h2>
</div>

<form asp-action="EditProduct" method="post" asp-route-id="@Model.ProductId">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
            >
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
      <div class="form-group">
    <label asp-for="Description"></label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" asp-for="Description"></textarea>
  </div>
  <div class="form-group">
        <label asp-for="ImageFile" class="control-label"></label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
  <input type="submit" value="Edit" class="mt-4 btn btn-primary">
</form>