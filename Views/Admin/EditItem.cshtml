@model DataTwo

 <div class="text-center">
        <h2>Register a product</h2>
    </div>

    <form asp-action="EditProduct" method="post" enctype="multipart/form-data" asp-controller="Admin" asp-route-id="@Model.Product.ProductId">

        <div class="form-group">
            <label asp-for="@Model.Product.Name"></label>
            <input asp-for="@Model.Product.Name" class="form-control bg-black text-white" id="exampleInputEmail1"
                aria-describedby="emailHelp">
            <span asp-validation-for="@Model.Product.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Product.Brand"></label>
            <input asp-for="@Model.Product.Brand" class="form-control bg-black text-white" id="exampleInputEmail1"
                aria-describedby="emailHelp" min="1">
            <span asp-validation-for="@Model.Product.Brand" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Product.Price"></label>
            <input asp-for="@Model.Product.Price" class="form-control bg-black text-white" id="exampleInputEmail1"
                aria-describedby="emailHelp" min="1">
            <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Product.Quantity"></label>
            <input asp-for="@Model.Product.Quantity" class="form-control bg-black text-white" id="exampleInputEmail1"
                aria-describedby="emailHelp" min="1">
            <span asp-validation-for="@Model.Product.Quantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Product.Description"></label>
            <textarea class="form-control bg-black text-white" id="exampleFormControlTextarea1" rows="3"
                asp-for="@Model.Product.Description"></textarea>
        </div>
        <label>Add A Category</label>
        <select class="form-control bg-black text-white" asp-for="@Model.Product.CategoryId">
            @foreach (var item in @Model.Categories)
            {
                <option value="@item.CategoryId">@item.Name</option>
            }
        </select>
        <input type="submit" value="Register" class="mt-4 btn btn-outline-secondary w-100 p-3">
        
    </form>
    </div>