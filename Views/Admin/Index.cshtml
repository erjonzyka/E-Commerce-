@model List<Product>
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>

<body>
    <div class="text-center mb-5">
        <h1>Welcome to Our Store</h1>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-4 mr-5 mb-5">
            <div class="card text-white bg-dark" style="width: 15rem;">
                <img class="card-img-top" src="~/uploads/@item.ImageFileName" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">Price: @item.Price</p>
                    <a asp-action="ItemDetails" class="btn btn-outline-primary" asp-route-id="@item.ProductId" asp-controller="Home">Show More</a>
                </div>
                <div class="mb-3">
                @if(@HttpContextAccessor.HttpContext.Session.GetInt32("AdminId")!=null){
                    <a asp-action="DeleteItem" class="btn btn-danger" asp-route-id="@item.ProductId" asp-controller="Admin">Delete</a>
                    <a asp-action="EditItem" class="btn btn-success" asp-route-id="@item.ProductId" asp-controller="Admin">Edit</a>
                }
                </div>
            </div>
            </div>
        }
    </div>
</body>

</html>