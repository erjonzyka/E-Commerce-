@model DataOne
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Your head content -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="col-8">
        <h1>@Model.Product.Name</h1>
        <h3>Price: @Model.Product.Price</h3>
        <p>@Model.Product.Description</p>
    </div>
    <div class="col-4">
        <form asp-action="Purchase" method="post" asp-route-id="@Model.Product.ProductId" id="purchaseForm">
            <input type="hidden" value="@Model.Product.ProductId" asp-for="@Model.Purchase.ProductId">
            <input type="hidden" value="@HttpContextAccessor.HttpContext.Session.GetInt32("UserId")" asp-for="@Model.Purchase.UserId">
            <div class="form-group">
                <label asp-for="@Model.Purchase.Quantity"></label>
                <input asp-for="@Model.Purchase.Quantity" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" min="1">
                <span asp-validation-for="@Model.Purchase.Quantity" class="text-danger"></span>
            </div>
            <button type="button" class="btn btn-success" onclick="confirmPurchase()">Buy</button>
        </form>
    </div>

    <script>
        function confirmPurchase() {
            Swal.fire({
                title: 'Are you sure?',
                text: 'Are you sure you want to purchase this product?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, buy it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Submit the form
                    document.getElementById('purchaseForm').submit();
                }
            });
        }
    </script>
</body>
</html>
